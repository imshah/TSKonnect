
div(ng-controller='mainCtrl')
	h1 Welcome to the Taskstream Profiles!

	div Search:
		input(ng-model='search', class="search-query")

	div
		table(class="table table-striped table-hover")
			thead
				tr
					th Name
					th Title
					th Email
					th Phone
			tr(ng-repeat='user in appuser | filter:search', ng-click='loadProfile(user)', ui-sref='profile({username:user.username})')
				td {{user.username}}
				td {{user.title}}
				td {{user.email}}
				td {{user.phone}}
